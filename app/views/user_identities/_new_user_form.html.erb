<div class="pure-g">
  <div class="pure-u-1-3"></div>
  <div class="pure-u-1-6">
    <h2 class="form-header">SWOT Bot</h2>
  </div>
   <div class="pure-u-1-6">
    <%= image_tag("Robot.png") %>  
  </div>
  <div class="pure-u-1-3"></div>
</div>      

<div class="pure-g">
  <div class="pure-u-1-3">
  </div>

    <div class="pure-u-1-3 form-container">
      <%= render 'shared/error_messages' %>
      <%= form_for @user, :url => user_identities_path, :html => { :class => "pure-form pure-form-stacked", :id => "sign_up" } do |f| %>

      <%= f.text_field :registration_code, placeholder: "registration code" %>

      <%= f.text_field :username, placeholder: "username" %>
     
      <%= f.text_field :first_name, placeholder: "first name" %>

      <%= f.text_field :last_name, placeholder: "last name" %>
   
      <%= f.text_field :password, placeholder: "password" %>

      <%= f.text_field :password_confirmation, placeholder: "password confirmation" %>
      <div class="next-button">
        <%= f.submit value="Next", :class => "pure-button" %>
      </div>
    <% end %>
  </div>
  <div class="pure-u-1-3">
  </div>
</div>