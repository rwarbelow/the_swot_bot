<h2>Welcome, <%= current_guardian.first_name %> <%= current_guardian.last_name %>!</h2>

<h3>Here are all the Students for this guardian</h3>
<ul>
<% current_guardian.students.each do |student| %>
  <li><%= link_to [student.first_name, student.last_name].join(' '), guardians_student_path(student)%></li>
  <% end %>
</ul>


<div class="pure-u-1-3 form-container">
  <% if flash[:guardianship_errors] %>
    <p class="flash-notice"><%= flash[:guardianship_errors] %></p>
  <% end %>
  <% if flash[:registration_errors] %>
    <p class="flash-notice"><%= flash[:registration_errors] %></p>
  <% end %>
    <%= form_for Guardianship.new, url: guardians_profile_add_student_path(current_guardian), :html => { :class => "pure-form pure-form-stacked", :id => "login" } do |f| %>
      <h3>Add student to account</h3>

      <%= f.label :registration_code, "SWOTBot Registration Code" %>

      <%= f.text_field :registration_code, placeholder: "xxxxxxxx" %>

      <%= f.label :ccsd_id, "CCSD ID" %>

      <%= f.text_field :ccsd_id %>

      <%= f.label :relationship_to_student, "Relationship to Student" %>

      <%= f.select :relationship_to_student, [['Mom','mom'],
      ['Dad','dad'],
      ['Step-mom', 'step-mom'],
      ['Step-dad', 'step-dad'],
      ['Grandma','grandma'],
      ['Grandpa', 'grandpa'],
      ['Sibling', 'sibling'],
      ['Aunt', 'aunt'],
      ['Uncle', 'uncle'],
      ['Other', 'other']] %>

      <div class="login-button">
        <%= f.submit value="Add Student", :class => "pure-button" %>
      </div>
    <% end %>
  </div>

  <div class="pure-u-1-3 form-container">
  <% if flash[:phone_number_errors] %>
    <p class="flash-notice"><%= flash[:errors] %></p>
  <% end %>
    <%= form_for PhoneNumber.new, url: guardians_profile_add_phone_number_path(current_guardian), :html => { :class => "pure-form pure-form-stacked", :id => "login" } do |f| %>
    <h3>Add phone number to account</h3>

      <%= f.label :number, "Phone Number" %>

      <%= f.text_field :number, placeholder: "***-***-****" %>

      <%= f.label :kind, "Phone Type" %>

      <%= f.select :kind, [['Cell','cell'],
      ['Home','home'],
      ['Work', 'work'],
      ['Other', 'other']] %>

      <div class="login-button">
        <%= f.submit value="Add Phone Number", :class => "pure-button" %>
      </div>
    <% end %>
  </div>
