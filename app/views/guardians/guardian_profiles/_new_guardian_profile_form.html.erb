<div class="pure-g">
  <div class="pure-u-1-3"></div>
  <div class="pure-u-1-3"></div>
</div>      

<div class="pure-g">
  <div class="pure-u-1-3">
  </div>
    <div class="pure-u-1-3 form-container">
      <%= render 'shared/error_messages' %>
      <%= form_for @guardian_profile, :url => guardian_profiles_path, :html => { :class => "pure-form pure-form-stacked", :id => "sign_up" } do |f| %>

      <%= f.text_field :registration_code, placeholder: "registration code" %>

      <%= f.text_field :ccsd_id, placeholder: "Student CCSD ID #" %>

      <%= f.text_field :address_line_1, placeholder: "street address line 1" %>

      <%= f.text_field :address_line_2, placeholder: "apt number (optional)" %>

      <%= f.text_field :address_city, placeholder: "city" %>

      <%= f.text_field :address_state, placeholder: "state" %>

      <%= f.text_field :address_zip_code, placeholder: "zip code" %>

      <%= f.text_field :email, placeholder: "example@email.com" %>

      <%= f.select :relationship_to_student, [['Mom','mom'],
      ['Dad','dad'],
      ['Step-mom', 'step-mom'],
      ['Step-dad', 'step-dad'],
      ['Grandma','grandma'],
      ['Grandpa', 'grandpa'],
      ['Sibling', 'sibling'],
      ['Aunt', 'aunt'],
      ['Uncle', 'uncle'],
      ['Other', 'other']] %>

      <%= f.select :preferred_language, [['English','event'],
      ['Dad','dad'],
      ['Step-mom', 'step-mom'],
      ['Step-dad', 'step-dad'],
      ['Grandma','grandma'],
      ['Grandpa', 'grandpa'],
      ['Sibling', 'sibling'],
      ['Aunt', 'aunt'],
      ['Uncle', 'uncle'],
      ['Other', 'other']] %>

      <%= f.text_field :preferred_language, placeholder: "langauge-change to dropdown" %>

      <div class="next-button">
        <%= f.submit value="Next", :class => "pure-button" %>
      </div>
    <% end %>
  </div>
  <div class="pure-u-1-3">
  </div>
</div>
