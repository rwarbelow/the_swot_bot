<div class="pure-g">
  <div class="pure-u-1-3"></div>
  <div class="pure-u-1-3"></div>
</div>      

<div class="pure-g">
  <div class="pure-u-1-3">
  </div>
    <div class="pure-u-1-3 form-container">
      <%= render 'shared/error_messages' %>
      <%= form_for @guardian, :url => guardians_path, :html => { :class => "pure-form pure-form-stacked", :id => "sign_up" } do |f| %>

      <%= f.label :registration_code, "SWOTBot Registration Code" %>

      <%= f.text_field :registration_code, placeholder: "xxxxxxxx" %>

      <%= f.label :ccsd_id, "CCSD ID" %>

      <%= f.text_field :ccsd_id %>

      <%= f.label :address_line_1, "Street Address" %>

      <%= f.text_field :address_line_1 %>

      <%= f.label :address_line_2, "Apartment Number (optional)" %>

      <%= f.text_field :address_line_2 %>

      <%= f.label :address_city, "City" %>

      <%= f.text_field :address_city %>

      <%= f.label :address_state, "State" %>

      <%= f.text_field :address_state %>

      <%= f.label :address_zip_code, "Zip Code" %>

      <%= f.text_field :address_zip_code %>

      <%= f.label :email, "Email Address" %>

      <%= f.text_field :email %>

      <%= f.label :relationship_to_student, "Relationship to Student" %>

      <%= f.select :relationship_to_student, [['Mom','mom'],
      ['Dad','dad'],
      ['Step-mom', 'step-mom'],
      ['Step-dad', 'step-dad'],
      ['Grandma','grandma'],
      ['Grandpa', 'grandpa'],
      ['Sibling', 'sibling'],
      ['Aunt', 'aunt'],
      ['Uncle', 'uncle'],
      ['Other', 'other']], :style => nil %>

      <%= f.label :preferred_language, "Preferred Language" %>

      <%= f.select :preferred_language, [['English','English'],
      ['Spanish','Spanish'],
      ['Other', 'Other']] %>

      <div class="next-button">
        <%= f.submit value="Next", :class => "pure-button" %>
      </div>
    <% end %>
  </div>
  <div class="pure-u-1-3">
  </div>
</div>
