<h1>Guardian Edit Page</h1>

<div class="pure-g">
  <div class="pure-u-1-3"></div>
  <div class="pure-u-1-3"></div>
</div>      

<div class="pure-g">
  <div class="pure-u-1-3">
  </div>
    <div class="pure-u-1-3 form-container">
      <%= render 'shared/error_messages' %>
      <%= form_for @guardian, url: guardians_profile_path(@guardian), :html => { :class => "pure-form pure-form-stacked", :id => "sign_up" } do |f| %>

      <%= f.label :email, "Email Address" %>

      <%= f.text_field :email %>

      <div class="submit-button">
        <%= f.submit value="Update Email", :class => "pure-button" %>
      </div>
    <% end %>
  </div>
  <div class="pure-u-1-3">
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1-3">
  </div>
<div class="pure-u-1-3 form-container">
      <%= render 'shared/error_messages' %>
      <%= form_for @user, :html => { :class => "pure-form pure-form-stacked", :id => "sign_up" } do |f| %>

      <%= f.label :password, "New Password" %>

      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Enter Password Again" %>
      
      <%= f.password_field :password_confirmation %>

      <div class="submit-button">
        <%= f.submit value="Change Password", :class => "pure-button" %>
      </div>
    <% end %>
  </div>
    <div class="pure-u-1-3">
  </div>
</div>
