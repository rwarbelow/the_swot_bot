<div class="class-icon-container">
	<ul>
		<% if current_teacher? %>
			<% current_teacher.courses.includes(:subject).each do |course| %>
				<li class="class-icon">
					<span class="period"><%= course.period %></span>
					<%= link_to "#{course.subject.name}", teachers_course_liveclass_path(course) , :class => "btn btn-large btn-info" %>
				</li>
			<% end %>
		<%end%>
	</ul>
	<ul>
		<% if current_student? %>
			<% current_student.courses.includes(:subject).each do |course| %>
				<li>
					<%= link_to "#{course.subject.name}, per. #{course.period}", students_course_path(course) , :class => "btn btn-large btn-info"%>
				</li>
			<% end %>
		<%end%>
	</ul>
</div>
