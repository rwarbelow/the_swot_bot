        <li><%= link_to "Class Info", 
            teachers_courseload_path, 
            :id => "classes",
            :class => "#{'current' if current_page?(teachers_courseload_path)} button button-flat" %>
        </li>


        <li><%= link_to "Profile", 
            teachers_profile_path(current_teacher),
             :id => "profile",
             :class => "#{'current' if current_page?(teachers_profile_path(current_teacher))} button button-flat" %>
        </li>
      <% end %>

