<%= link_to "Back", :back %>

<div>
	<h1><%= current_student.first_name %>'s Completed Goals</h1>
		<table>
		<thead>
			<th>Created</th>
			<th>Goal</th>
			<th>Completed</th>
		</thead>
		<% if @completed_goals.length > 0 %>
			<% @completed_goals.sort!{ |a, b| b.id <=> a.id }.each do |goal| %>
				<tr>
					<td><%= goal.created_at.strftime("%b %d, %Y") %></td>
					<td><%= goal.goal %></td>
					<td><%= goal.updated_at.strftime("%b %d, %Y") %></td>
				</tr>
			<% end %>
			<% end %>
		</table>
</div>
