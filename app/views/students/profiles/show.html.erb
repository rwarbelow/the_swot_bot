<%if current_student = current_user %>
<h1><%= current_user.first_name %>'s Information</h1>
<%= link_to "Edit Profile", students_edit_profile_path %>
<br><br>
<div>
  <ul>
    <li><strong>First Name: </strong><%= current_user.first_name %> </li>
    <li><strong>Last Name: </strong><%= current_user.last_name %> </li>
    <li><strong>Username: </strong><%=current_user.username %> </li>
    <li><strong>Birthday: </strong><%= current_user.birthday %> </li>
    <li><strong>Address: </strong><%= current_user.address %> </li>
    <li><strong>Email: </strong><%= current_user.email %> </li>
    <li><strong>CCSD ID: </strong><%= current_user.ccsd_id %> </li>
    <li><strong>Grade Level: </strong><%= current_user.grade_level %> </li>
    <br>
    <li><strong>Guardians: </strong><% current_user.guardians.each do |guardian| %> 
      <ul>
      <li><%= guardian.first_name %> <%= guardian.last_name %></li>

      <% end %></li></ul>
  </ul>
<% end %>
