<h1>Create a New Course</h1>

<div class="pure-g">
  <div class="pure-u-1-3">
  </div>
    <div class="pure-u-1-3 form-container">
      <%= render 'shared/error_messages' %>
      <%= form_for @parent_profile, :url => user_identities_path, :html => { :class => "pure-form pure-form-stacked", :id => "sign_up" } do |f| %>

      <%= f.text_field :address_line_1, placeholder: "address line 1" %>

      <%= f.text_field :address_line_2, placeholder: "apt number" %>

      <%= f.text_field :address_city, placeholder: "city" %>

      <%= f.text_field :address_state, placeholder: "state" %>

      <%= f.text_field :address_zip_code, placeholder: "zip code" %>

      <%= f.text_field :email, placeholder: "example@email.com" %>

      <%= f.text_field :preferred_language, placeholder: "langauge-change to dropdown" %>

      <div class="next-button">
        <%= f.submit value="Next", :class => "pure-button" %>
      </div>
    <% end %>
  </div>
  <div class="pure-u-1-3">
  </div>
</div>
