<h1><%= current_user.first_name %> <%= current_user.last_name %>'s Courses</h1>
<%= link_to "Master Course Schedule", teachers_courses_path(current_teacher) %>

<div>
	<table>
		<thead>
			<th>Period</th>
			<th>Subject</th>
			<th>Class Report</th>
		</thead>
		<% @courses.each do |course| %>
		<tr>
			<td><%= course.period %></td>
			<td><%= link_to course.subject.name, teachers_course_path(course) %></td>
			<td><%= link_to "Report", teachers_course_report_path(:course => course.id) %></td>
		</tr>
		<% end %>
	</table>
</div>
