<h1>Edit your information</h1>


<div class="pure-g">
  <div class="pure-u-1-3"></div>
  <div class="pure-u-1-3"></div>
</div>      

<div class="pure-g">
  <div class="pure-u-1-3">
  </div>
    <div class="pure-u-1-3 form-container">
      <%= render 'shared/error_messages' %>
      <%= form_for @teacher, :html => { :class => "pure-form pure-form-stacked", :id => "sign_up" } do |f| %>

      <%= f.text_field :title %>

      <%= f.text_field :email %>

      <div class="next-button">
        <%= f.submit value="Update!", :class => "pure-button" %>
      </div>
    <% end %>
  </div>
  <div class="pure-u-1-3">
  </div>
</div>
