<div>
  <%= render 'shared/error_messages' %>
    <%= form_for @guardian, url: guardians_profile_path(@guardian), :html => { :class => "pure-form pure-form-stacked", :id => "sign_up" } do |f| %>

      <%= f.label :email, "Email Address" %>
      <%= f.text_field :email %>

      <%= f.label :address, "Street Address" %>
      <%= f.text_field :address %>

      <%= f.label :preferred_language, "Preferred Language" %>
      <%= f.select :preferred_language, [['English','English'],
      ['Spanish','Spanish'],
      ['Other', 'Other']] %>

      <%= f.submit value="Update Email", :class => "pure-button" %>
    <% end %>
  </div>


<div>
	<h2>Reply to this message</h2>
	<%= form_for Message.new, url: messages_path, method: "post" do |f| %>

	  <p>To: <%= Identity.find(@message.author_id).first_name %> <%= Identity.find(@message.author_id).last_name %></p>
	  <%= f.hidden_field(:to, value: @message.author_id) %>

	  <p>Subject: Re: <%= @message.subject%> </p>
	  <%= f.hidden_field(:subject, value: "Re: #{@message.subject}") %>

	  <%= f.label :body %>
	  <%= f.text_area :body %><br />

	  <%= f.submit %>
	<% end %>
</div>




