<div class="grid-container">
  <div class="icon-container">
    <% if flash[:notice] %>
      <p class="flash-notice"><%= flash[:notice] %></p>
    <% end %>

    <ul id="student-icon-list">

      <% @students.each do |student| %>
        <li data-id="<%= student.id %>" class="student-icon">
          <div class="initials">
            <%= student.first_name[0].upcase %><%= student.last_name[0].downcase %>
          </div>
          <div class="full-name">
            <%= student.first_name %> <%= student.last_name %>
          </div>
        </li>
      <% end %>

    </ul>
  </div>
</div>
