<div class="buttons-in-line">
	<%= button_to "Print List", teachers_scholar_hour_print_path, method: "get", :class => "btn in-line"  %>
	<%= button_to "Add Custom Scholar Hour", new_teachers_scholar_hour_path, method: "get", :class => "btn in-line"  %>
	<% if @completed_scholar_hours.length > 0 %>
	<%= button_to "View Completed Scholar Hours", teachers_completed_scholar_hours_path, :class => "btn in-line", method: :get %>
	<% end %>
</div>
<br><br>

<div class="scholar-hours">
	<%= form_tag teachers_complete_multiple_scholar_hours_path, method: :put do %>
	<% @students_with_scholar_hours.each do |s| %>
	<div class="scholar-hour-box">
		<table class="wide-table">
			<thead>
				<h4><%= link_to s.full_name, teachers_student_profile_path(s) %></h4>
			</thead>
			<% s.not_completed_scholar_hours.each do |scholarhour| %>
			<tr>
				<%= render 'scholar_hour', :scholarhour => scholarhour %>
			</tr>
			<% end %>
		</table>
	</div>
	<br><br>
	<% end %>
	<%= submit_tag "Complete All Selected", class: "btn" %>
	<% end %>
</div>

