<div class="pure-g">
  <div class="pure-u-1-3">
  </div>
    <div class="pure-u-1-3 form-container">
      <%= render 'shared/error_messages' %>
      <%= form_for @user, :url => user_identities_path, :html => { :class => "pure-form pure-form-stacked", :id => "sign_up" } do |f| %>

      <%= f.label :username, "Username" %>

      <%= f.text_field :username %>

      <%= f.label :first_name, "First Name" %>
     
      <%= f.text_field :first_name %>

      <%= f.label :last_name, "Last Name" %>

      <%= f.text_field :last_name %>

      <%= f.label :password, "Password" %>
   
      <%= f.text_field :password %>

      <%= f.label :password_confirmation, "Type Password Again" %>

      <%= f.text_field :password_confirmation %>
      <div class="next-button">
        <%= f.submit value="Submit", :class => "pure-button" %>
      </div>
    <% end %>
  </div>
  <div class="pure-u-1-3">
  </div>
</div>
